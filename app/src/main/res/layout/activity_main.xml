<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#274a76"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! Name of character" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hpView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="HP: " />
        <TextView
            android:id="@+id/attView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hpView"
            android:paddingRight="50dp"
            android:text="ATTK: " />
        <TextView
            android:id="@+id/defView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/attView"
            android:paddingBottom="50dp"
            android:text="DEF: " />
    </LinearLayout>





        <ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/vf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <include
                android:id="@+id/chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/activity_fragment"/>
            <include
                android:id="@+id/chapterNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/activity_fragment_next"/>

        </ViewFlipper>



</RelativeLayout>