<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subTitleTvPageFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:text="@string/subTitle_page_five"/>

            <TextView
                android:id="@+id/fiveTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_five_text"
                android:textColor="#ff5506"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="480dp"
                android:layout_below="@id/fiveTv"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/toEndOfChapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="next" />
        </LinearLayout>


    </ScrollView>
</RelativeLayout>